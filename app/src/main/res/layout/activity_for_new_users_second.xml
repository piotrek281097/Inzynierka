<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/instructionTitleFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="24dp"
        android:text="@string/instruction_title_first"/>

    <TextView
        android:id="@+id/instructionFirstStep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/instructionTitleFirst"
        android:textSize="20dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/linkToSettingGmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/instructionFirstStep"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textSize="20dp"
        android:linksClickable="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textLinkNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAlignment="textEnd"
        android:textSize="24dp"
        android:layout_alignParentBottom="true"
        android:text="@string/next"/>

</RelativeLayout>